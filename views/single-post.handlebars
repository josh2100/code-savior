
<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <a href= "{{format_url post_url}}"><span>({{format_url post_url}})</span></a>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "vote" vote_count}} for {{user.username}}'s post.
    {{!-- | --}}
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

{{!-- {{#if loggedIn}} --}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit">add comment</button>
    {{!-- <button type="button" class="upvote-btn">upvote</button> --}}
  </div>
</form>
{{!-- {{/if}} --}}

<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{!-- {{#if loggedIn}} --}}
<script src="/javascript/comment.js"></script>
{{!-- <script src="/javascript/upvote.js"></script> --}}
{{!-- {{/if}} --}}