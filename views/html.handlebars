<link rel="stylesheet" type="text/css" href="/styles/style.css">
<div class="js-handle-title">
  <h2>HTML Resources</h2>
  <ol class="post-list">
    {{#each posts as |post|}}
    <li>
</div>

<article class="post">
  <div class="title">
    <a class="post-int-link" href="/post/{{id}}">{{title}}</a>
    <a href="{{post_url}}" target="_blank"><span class= "post-ext-link">({{format_url post_url}})</span></a>
  </div>
  <div class="meta">
   {{vote_count}} {{format_plural "like" vote_count}} for {{user.username}}'s post | {{comments.length}} {{format_plural "comment" comments.length}} 
  </div>
</article>

</li>
{{/each}}
</ol>